# InfraSketch Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED: Anthropic API Key
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================
# OPTIONAL: LangSmith Tracing
# ============================================
# Enable for debugging and tracing LLM calls
LANGSMITH_TRACING=False
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY="your-langsmith-key-here"
LANGSMITH_PROJECT="InfraSketch"

# ============================================
# OPTIONAL: Rate Limiting Configuration
# ============================================
# Requests per minute per IP address
RATE_LIMIT_PER_MINUTE=60
# Maximum burst size (number of requests that can be made instantly)
RATE_LIMIT_BURST=10

# ============================================
# OPTIONAL: API Key Authentication
# ============================================
# Set to 'true' to require API key authentication
REQUIRE_API_KEY=false
# Comma-separated list of valid API keys
# Generate secure keys with: openssl rand -hex 32
VALID_API_KEYS=""

# ============================================
# OPTIONAL: Additional CORS Origins
# ============================================
# Comma-separated list of additional allowed origins
# The following are always allowed:
#   - https://infrasketch.net (production)
#   - https://www.infrasketch.net (production www)
#   - http://localhost:5173 (local dev)
EXTRA_ALLOWED_ORIGINS=""

# ============================================
# AWS Configuration (if using AWS Secrets Manager)
# ============================================
AWS_REGION=us-east-1
